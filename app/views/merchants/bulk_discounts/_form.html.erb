<%= form_with model: @bulk_discount, url: url, method: method, local: true do |form| %>
  <div class='form-group'>
    <%= form.label :percentage_discount %>
    <%= form.text_field :percentage_discount, class:'form-control' %>
  </div>
  
  <div class='form-group'>
    <%= form.label :quantity_threshold %>
    <%= form.text_field :quantity_threshold, class:'form-control' %>
  </div>

  <%= form.submit 'Submit', class:'btn btn-primary' %>
<% end %>