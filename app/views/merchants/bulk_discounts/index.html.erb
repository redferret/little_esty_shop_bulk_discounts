<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path(@merchant), class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Bulk Discounts', merchant_bulk_discounts_path(@merchant), class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<div class="row">
  <p class='mr-auto col-sm-5'>Bulk Discounts</p>
</div>
<div class='row'>
  <div class='col'>
    <ul id='discount-list'>
      <% @merchant.bulk_discounts.each_with_index do |discount, index| %>
        <section id="discount-<%= discount.id %>">
            <li><%= link_to link_string(index, discount), merchant_bulk_discount_path(@merchant, discount), class:'btn btn-link' %> </li>
        </section>
      <% end %>
    </ul>
  </div>
</div>